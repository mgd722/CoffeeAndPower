%h1= @cafe.name
%p= @cafe.address
%p.user
  Added by
  = @cafe.user.name
  = time_ago_in_words(@cafe.created_at)
  ago

- if @cafe.user == current_user
  = link_to "Edit", edit_cafe_path(@cafe), class: "data"
  = link_to "Delete", cafe_path(@cafe), method: :delete, data: { confirm: "Are you sure?"}, class: "data"

%p= link_to "Home", root_path