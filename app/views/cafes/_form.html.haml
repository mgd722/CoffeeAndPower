= simple_form_for(@cafe, html: { class: 'form' })  do |f|
  .form-group
    =f.collection_select :location_id, Location.all, :id, :name, {prompt: "Choose a location"}
    =f.input :name,  input_html: { class: 'form-control' }, placeholder: "Enter the cafe's name"
    =f.input :address, input_html: { class: 'form-control' }, placeholder: "Enter the address"
    =f.input :description, input_html: { class: 'form-control', rows: 15 }, placeholder: 'Enter a description about the cafe'
  =f.submit class: "btn btn-warning"