!!!
%html
  %head
    %title Coffee and Power
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    %link{rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.3/normalize.min.css"}
    %link{rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Montserrat:400,700"}
    %link{rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Kaushan+Script"}
    %link{rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic"}
    %link{rel: "stylesheet", href: "http://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700"}
    = javascript_include_tag "http://cdnjs.cloudflare.com/ajax/libs/typeahead.js/0.9.3/typeahead.min.js"
    = javascript_include_tag "http://maps.stamen.com/js/tile.stamen.js?v1.1.3"

  %body#page-top.index
    #wrap
      = render 'layouts/navigation'

      .notifications
        - if notice
          #notice_wrapper
            %p.alert.alert-dismissable= notice
            %span.close{type: "button", data: {dismiss:"alert"}}
              %i.fa.fa-times
        - elsif alert
          #alert_wrapper
            %p.alert.alert-dismissable= alert
            %span.close{type: "button", data: {dismiss:"alert"}}
              %i.fa.fa-times
      =yield
  - if @cafes
    #footer
      .container
        .row.paginate
          = will_paginate @cafes, renderer: BootstrapPagination::Rails